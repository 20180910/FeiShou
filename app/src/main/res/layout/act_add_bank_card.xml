<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:tools="http://schemas.android.com/tools"
              android:background="@color/background_f2"
              android:orientation="vertical"
    >

    <include layout="@layout/app_title"/>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:ems="5"
        android:gravity="center_vertical"
        android:text="持卡人"
        android:textSize="16sp"
        />

    <com.github.customview.MyEditText
        android:id="@+id/et_bank_username"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="20dp"
        android:hint="请输入持卡人"
        android:textSize="16sp"
        android:maxLines="1"
        android:inputType="text"
        android:maxLength="10"
        />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:layout_marginTop="2px"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ems="5"
            android:gravity="center_vertical"
            android:text="卡号"
            android:textSize="16sp"
            />

        <com.github.customview.MyEditText
            android:id="@+id/et_bank_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:hint="请输入卡号"
            android:textSize="16sp"
            android:maxLines="1"
            android:inputType="number"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:layout_marginTop="2px"
        android:paddingRight="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ems="5"
            android:gravity="center_vertical"
            android:text="银行"
            android:textSize="16sp"
            />
        <LinearLayout
            android:id="@+id/ll_select_bank"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <ImageView
                android:id="@+id/tv_bank_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                tools:src="@drawable/img33"
                android:layout_marginRight="3dp"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/tv_bank_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="请选择银行"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:drawableRight="@drawable/img22"
                android:layout_marginLeft="7dp"
                />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"
        >
        <com.github.customview.MyCheckBox
            android:id="@+id/cb_bank_agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="同意"
            android:checked="true"
            android:textColor="@color/gray_99"
            android:gravity="center_vertical"
            app:my_checkbox_checked="@drawable/img23"
            app:my_checkbox_normal="@drawable/img24"
            android:paddingLeft="7dp"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/tv_tx_xieyi"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="《资金快捷收付及授权协议》"
            android:textColor="@color/blue"
            android:layout_marginLeft="5dp"
            android:textSize="14sp"
            />
    </LinearLayout>
    <com.github.customview.MyTextView
        android:id="@+id/tv_add_bank_commit"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="确定"
        android:gravity="center"
        app:my_tv_solid="@color/blue"
        app:my_tv_press="@color/blue_press"
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        app:my_tv_corner_radius="22dp"
        android:textSize="17sp"
        />
</LinearLayout>