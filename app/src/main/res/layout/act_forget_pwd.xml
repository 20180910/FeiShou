<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/gray_f6"
    >
<include layout="@layout/app_title"/>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@color/white"
        >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="50dp"
                >
            <com.github.customview.MyLinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                app:my_ll_corner_radius="23dp"
                app:my_ll_all_line="true"
                app:my_ll_border_color="@color/border_e5"
                app:my_ll_border_width="2px"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                >
                <com.github.customview.MyEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:hint="输入手机号"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="15dp"
                    android:textColorHint="@color/gray_99"
                    android:textColor="@color/colorText"
                    android:inputType="number"
                    android:maxLines="1"
                    android:maxLength="11"
                    android:textSize="15sp"
                    />
            </com.github.customview.MyLinearLayout>
                <com.github.customview.MyLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    app:my_ll_corner_radius="23dp"
                    app:my_ll_all_line="true"
                    app:my_ll_border_color="@color/border_e5"
                    app:my_ll_border_width="2px"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="20dp"
                    >
                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:hint="短信验证码"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="15dp"
                        android:textColorHint="@color/gray_99"
                        android:textColor="@color/colorText"
                        android:background="@color/white"
                        android:inputType="number"
                        android:maxLines="1"
                        android:textSize="15sp"
                        android:paddingLeft="7dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="获取验证码"
                        android:layout_marginRight="15dp"
                        android:textSize="15dp"
                        android:gravity="center"
                        android:textColor="@color/blue"
                        />
                </com.github.customview.MyLinearLayout>
                <com.github.customview.MyLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    app:my_ll_corner_radius="23dp"
                    app:my_ll_all_line="true"
                    app:my_ll_border_color="@color/border_e5"
                    app:my_ll_border_width="2px"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="20dp"
                    >
                    <com.github.customview.MyEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:hint="设置新密码"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="15dp"
                        android:textColorHint="@color/gray_99"
                        android:textColor="@color/colorText"
                    android:inputType="textPassword"
                    android:maxLines="1"
                        android:textSize="15sp"
                        />
                </com.github.customview.MyLinearLayout>
                <com.github.customview.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    app:my_tv_corner_radius="23dp"
                    app:my_tv_solid="@color/blue"
                    app:my_tv_press="@color/blue_press"
                    android:gravity="center"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:text="设置新密码"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                   />
            </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>