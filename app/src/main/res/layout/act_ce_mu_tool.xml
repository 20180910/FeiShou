<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background_f2"
    >
<include layout="@layout/app_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:orientation="vertical"
        >

    </LinearLayout>
    <com.github.customview.MyLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        >
        <com.github.customview.MyEditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="搜索地点或地址"
            android:textColor="@color/gray_66"
            android:drawableLeft="@drawable/back"
            app:my_et_solid="#FFDAD9D5"
            app:my_et_corner_radius="8dp"
            android:layout_margin="10dp"
            app:my_et_hiddenClear="true"
            />
    </com.github.customview.MyLinearLayout>
</LinearLayout>