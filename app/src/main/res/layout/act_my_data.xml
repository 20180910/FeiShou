<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background_f2"
    >
<include layout="@layout/app_title"/>
    <LinearLayout
        android:id="@+id/ll_info_img"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="头像"
            android:textSize="14sp"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_info_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/img6"
            android:layout_marginRight="15dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/jiantou_right"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_marginTop="2px"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:textSize="14sp"
            />
        <com.github.customview.MyEditText
            android:id="@+id/et_info_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            tools:text="18934293432"
            android:textColor="@color/gray_33"
            android:textSize="14sp"
            app:my_et_hiddenClear="true"
            android:paddingRight="15dp"
            android:maxLines="1"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/jiantou_right"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_info_date"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_marginTop="2px"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="出生日期"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/tv_info_birthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1993/12/31"
            android:textColor="@color/gray_33"
            android:textSize="14sp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/jiantou_right"
            android:layout_marginLeft="15dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_info_sex"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_marginTop="2px"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="性别"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/tv_info_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="女"
            android:textColor="@color/gray_33"
            android:textSize="14sp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/jiantou_right"
            android:layout_marginLeft="15dp"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_info_exit"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="退出登录"
        android:background="@color/white"
        android:layout_marginTop="2px"
        />
    <com.github.customview.MyTextView
        android:id="@+id/tv_info_commit"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="保存"
        android:textSize="@dimen/size_commit"
        android:textColor="@color/white"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:gravity="center"
        app:my_tv_corner_radius="22dp"
        app:my_tv_solid="@color/blue"
        app:my_tv_press="@color/blue_press"
        />
</LinearLayout>