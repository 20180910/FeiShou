<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/gray_f6"
              android:orientation="vertical"
    >

    <include layout="@layout/app_title"/>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:layout_above="@+id/tv_real_name_commit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:fillViewport="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <com.github.customview.MyLinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                app:my_ll_bottom_line="true"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="真实姓名"
                    android:textColor="@color/gray_66"
                    android:textSize="15sp"
                    />

                <com.github.customview.MyEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:hint="请输入姓名"
                    android:maxLines="1"
                    android:textColor="@color/gray_33"
                    android:textSize="15sp"
                    />
            </com.github.customview.MyLinearLayout>

            <com.github.customview.MyLinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                app:my_ll_bottom_line="true"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="身份证号"
                    android:textColor="@color/gray_66"
                    android:textSize="15sp"
                    />

                <com.github.customview.MyEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:hint="请输入身份证号"
                    android:maxLines="1"
                    android:textColor="@color/gray_33"
                    android:textSize="15sp"
                    />
            </com.github.customview.MyLinearLayout>

            <com.github.customview.MyLinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                app:my_ll_bottom_line="true"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="所在地区"
                    android:textColor="@color/gray_66"
                    android:textSize="15sp"
                    />

                <com.github.customview.MyEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:hint="请输入地区"
                    android:maxLines="1"
                    android:textColor="@color/gray_33"
                    android:textSize="15sp"
                    />
            </com.github.customview.MyLinearLayout>

            <com.github.customview.MyLinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                app:my_ll_bottom_line="true"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="详细地址"
                    android:textColor="@color/gray_66"
                    android:textSize="15sp"
                    />

                <com.github.customview.MyEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:hint="请输入地址"
                    android:maxLines="1"
                    android:textColor="@color/gray_33"
                    android:textSize="15sp"
                    />
            </com.github.customview.MyLinearLayout>

            <com.github.customview.MyLinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                app:my_ll_bottom_line="true"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="是否有无人机"
                    android:textColor="@color/gray_66"
                    android:textSize="15sp"
                    />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical"
                    android:orientation="horizontal"
                    android:paddingRight="15dp"
                    >

                    <com.github.customview.MyRadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:button="@null"
                        android:checked="true"
                        android:drawablePadding="7dp"
                        android:text="是"
                        android:textColor="@color/gray_33"
                        android:textSize="17sp"
                        app:my_radio_checked="@drawable/img23"
                        app:my_radio_checked_drawable="right"
                        app:my_radio_normal="@drawable/img24"
                        />

                    <com.github.customview.MyRadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:drawablePadding="7dp"
                        android:text="否"
                        android:textColor="@color/gray_33"
                        android:textSize="17sp"
                        app:my_radio_checked="@drawable/img23"
                        app:my_radio_checked_drawable="right"
                        app:my_radio_normal="@drawable/img24"
                        />
                </RadioGroup>
            </com.github.customview.MyLinearLayout>

            <com.github.customview.MyLinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                app:my_ll_bottom_line="true"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="是否有驾照"
                    android:textColor="@color/gray_66"
                    android:textSize="15sp"
                    />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical"
                    android:orientation="horizontal"
                    android:paddingRight="15dp"
                    >

                    <com.github.customview.MyRadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:button="@null"
                        android:checked="true"
                        android:drawablePadding="7dp"
                        android:text="是"
                        android:textColor="@color/gray_33"
                        android:textSize="17sp"
                        app:my_radio_checked="@drawable/img23"
                        app:my_radio_checked_drawable="right"
                        app:my_radio_normal="@drawable/img24"
                        />

                    <com.github.customview.MyRadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:drawablePadding="7dp"
                        android:text="否"
                        android:textColor="@color/gray_33"
                        android:textSize="17sp"
                        app:my_radio_checked="@drawable/img23"
                        app:my_radio_checked_drawable="right"
                        app:my_radio_normal="@drawable/img24"
                        />
                </RadioGroup>
            </com.github.customview.MyLinearLayout>

            <com.github.customview.MyLinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                app:my_ll_bottom_line="true"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="身份证上传"
                    android:textColor="@color/gray_66"
                    android:textSize="15sp"
                    />
            </com.github.customview.MyLinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:padding="10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <com.github.customview.MyLinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="105dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:my_ll_solid="#f5f5f5"
                        app:my_ll_corner_radius="5dp"
                        android:layout_marginRight="5dp"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/img25"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="上传身份证(正面)"
                                android:layout_marginTop="10dp"
                                />
                    </com.github.customview.MyLinearLayout>
                    <com.github.customview.MyLinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="105dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:my_ll_solid="#f5f5f5"
                        app:my_ll_corner_radius="5dp"
                        android:layout_marginLeft="5dp"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/img25"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="上传身份证(背面)"
                            android:layout_marginTop="10dp"
                            />
                    </com.github.customview.MyLinearLayout>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="格式要求:支持jpg,png,gif格式图片,大小不超过1M"
                    android:drawableLeft="@drawable/img26"
                    android:drawablePadding="10dp"
                    android:layout_marginTop="20dp"
                    />
            </LinearLayout>
            <com.github.customview.MyLinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                app:my_ll_bottom_line="true"
                android:layout_marginTop="5dp"
                >
                <com.github.customview.MyCheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="我已阅读并同意"
                    android:textColor="@color/gray_66"
                    android:textSize="15sp"
                    app:my_checkbox_checked="@drawable/img23"
                    app:my_checkbox_normal="@drawable/img24"
                    android:button="@null"
                    android:checked="true"
                    android:paddingLeft="7dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="《益农宝飞首实名认证协议》"
                    android:textColor="@color/blue"
                    android:textSize="15sp"
                    />
            </com.github.customview.MyLinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    <com.github.customview.MyTextView
        android:id="@+id/tv_real_name_commit"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:text="提交"
        android:gravity="center"
        app:my_tv_corner_radius="23dp"
        app:my_tv_press="@color/blue_press"
        app:my_tv_solid="@color/blue"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        />
</RelativeLayout>
</LinearLayout>