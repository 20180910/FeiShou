<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:layout_marginBottom="10dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            >
            <ImageView
                android:id="@+id/iv_rw_img"
                android:layout_width="90dp"
                android:layout_height="67dp"
                tools:src="@drawable/img3"
                android:layout_marginRight="12dp"
                android:background="@color/c_press"
                android:scaleType="centerCrop"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/tv_rw_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="早稻/8元每亩/500亩"
                    android:textColor="@color/gray_33"
                    android:textSize="15sp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="地址:"
                        android:textColor="@color/gray_99"
                        android:textSize="12sp"
                        android:layout_marginTop="11dp"
                        android:layout_marginBottom="5dp"
                        />
                    <TextView
                        android:id="@+id/tv_rw_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="浦东新区康桥镇周园路"
                        android:textColor="@color/gray_99"
                        android:textSize="12sp"
                        android:layout_marginTop="11dp"
                        android:layout_marginBottom="5dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="时间:"
                        android:textColor="@color/gray_99"
                        android:textSize="12sp"
                        />
                    <TextView
                        android:id="@+id/tv_rw_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="09/24-09/25(七天)"
                        android:textColor="@color/gray_99"
                        android:textSize="12sp"
                        />
                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/gray_d7"
                android:layout_marginRight="5dp"
                />
            <TextView
                android:id="@+id/tv_rw_money"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                tools:text="40000.0元"
                android:layout_gravity="center"
                android:drawableTop="@drawable/img4"
                android:drawablePadding="6dp"
                android:textColor="@color/blue"
                android:textSize="12dp"
                android:gravity="center_horizontal"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地况:"
                android:drawableLeft="@drawable/img1"
                android:paddingLeft="10dp"
                android:drawablePadding="10dp"
                android:textColor="@color/gray_99"
                />
            <TextView
                android:id="@+id/tv_rw_dk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="无连片，无障碍物，作物高度20~30cm"
                android:textColor="@color/gray_99"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray_d7"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            >
            <LinearLayout
                android:id="@+id/ll_rw_bao1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginRight="15dp"
                >
                <com.github.customview.MyFrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/img2"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon2"
                        android:layout_gravity="center"
                        />
                </com.github.customview.MyFrameLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="包吃"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_rw_bao2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginRight="15dp"
                >
                <com.github.customview.MyFrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/img2_2"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon3"
                        android:layout_gravity="center"
                        />
                </com.github.customview.MyFrameLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="包住"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_rw_bao3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginRight="10dp"
                >
                <com.github.customview.MyFrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/img2_3"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon4"
                        android:layout_gravity="center"
                        />
                </com.github.customview.MyFrameLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="可充电"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_rw_bao4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginRight="15dp"
                >
                <com.github.customview.MyFrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/img2_4"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon5"
                        android:layout_gravity="center"
                        />
                </com.github.customview.MyFrameLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="可取水"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>